@using VendorTracker.Models;
<div class = "container">
  <h3 class = "p-class">Here are all the orders for Vendor</h3>

  <ol>
  @foreach (Order o in @Model["orders"])
  {
    <li><a href='/vendors/@Model["vendor"].Id/orders/@o.Id'>@o.Title</a></li>
  }
  </ol>

  <div class = "order-link">
    <p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order</a></p>
    <p><a href='/vendors'>Return to vendor list</a></p>
    <p><a href='/'>Return to Main Page</a></p>
  </div>
</div>  

@{
  Layout = "_Layout";
}
